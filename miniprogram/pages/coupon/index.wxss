.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: sticky;
  top: 0;
  z-index: 1;
}

.tab-item {
  padding: 28rpx 0;
  margin-right: 60rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #FFD700;
  border-radius: 2rpx;
}

.coupon-list {
  padding: 30rpx;
}

.coupon-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.coupon-left {
  display: flex;
  align-items: baseline;
  margin-right: 40rpx;
  padding-right: 40rpx;
  border-right: 1rpx dashed #eee;
}

.symbol {
  font-size: 32rpx;
  color: #ff4d4f;
}

.amount {
  font-size: 60rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-left: 4rpx;
}

.coupon-right {
  flex: 1;
}

.title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.valid-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.desc {
  font-size: 24rpx;
  color: #666;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

.exchange-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFD700;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-radius: 44rpx;
}

/* 随心租样式 */
.rent-content {
  min-height: calc(100vh - 88rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.empty-rent {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 200rpx;
}

.card-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.bottom-tabs {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #f5f5f5;
}

.bottom-tab {
  font-size: 28rpx;
  color: #333;
  padding: 0 40rpx;
}

.divider {
  width: 2rpx;
  height: 24rpx;
  background: #eee;
} 