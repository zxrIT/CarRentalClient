.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 140rpx;
}

.safety-banner {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(90deg, #222, #000);
  margin: 20rpx 30rpx;
  border-radius: 8rpx;
}

.safety-banner > text {
  font-size: 26rpx;
  color: #FFD700;
  font-weight: 500;
}

.safety-items {
  flex: 1;
  display: flex;
  gap: 30rpx;
  justify-content: center;
}

.safety-items text {
  font-size: 26rpx;
  color: #FFD700;
}

.safety-check image {
  width: 32rpx;
  height: 32rpx;
}

.car-image-section {
  margin: 0;
  background: #fff;
  padding: 40rpx 0;
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.car-image {
  width: 90%;
  height: 100%;
  object-fit: contain;
}

.info-section {
  margin: 20rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.car-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.car-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.car-features {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.feature {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.specs-section {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.specs-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.spec-item .label {
  font-size: 28rpx;
  color: #666;
}

.spec-item .value {
  font-size: 28rpx;
  color: #333;
}

.config-section {
  margin: 20rpx 30rpx;
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
}

.config-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.config-scroll {
  width: 100%;
  white-space: nowrap;
}

.config-scroll-content {
  display: flex;
  width: fit-content;
}

.config-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
  margin-bottom: 40rpx;
  width: calc(100vw - 108rpx);
  margin-right: 20rpx;
}

.config-grid:last-child {
  margin-right: 0;
}

.config-item {
  width: calc((100% - 24rpx) / 3);
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  box-sizing: border-box;
  min-height: 120rpx;
}

.config-item .label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  text-align: center;
}

.config-item .value {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.dots {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  position: absolute;
  bottom: 16rpx;
  left: 0;
  right: 0;
  z-index: 1;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ddd;
}

.dot.active {
  background: #666;
  width: 24rpx;
  border-radius: 6rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100rpx;
}

.price-info {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.price {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: normal;
  line-height: 1;
}

.price-number {
  font-size: 48rpx;
  color: #FF4D4F;
  font-weight: bold;
  line-height: 1;
}

.day {
  font-size: 24rpx;
  color: #666;
  margin-left: 4rpx;
  line-height: 1;
}

.price-calendar {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
  position: relative;
}

.price-calendar::after {
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  border: 6rpx solid transparent;
  border-top-color: #666;
  margin-left: 8rpx;
  position: relative;
  top: 2rpx;
}

.book-btn {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FFD700;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 40rpx;
  text-align: center;
  border: none;
  padding: 0;
}

.button-hover {
  opacity: 0.9;
} 