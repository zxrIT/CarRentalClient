.container {
  min-height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 200rpx;
}

.card-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.bottom-tabs {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #f5f5f5;
}

.bottom-tab {
  font-size: 28rpx;
  color: #333;
  padding: 0 40rpx;
}

.divider {
  width: 2rpx;
  height: 24rpx;
  background: #eee;
} 