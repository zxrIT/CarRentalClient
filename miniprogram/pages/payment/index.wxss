.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.banner {
  width: 100%;
  height: auto;
}

.credit-score {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.credit-score text {
  font-size: 28rpx;
  color: #333;
}

.process-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.process-item {
  display: flex;
  margin-bottom: 40rpx;
}

.step {
  width: 60rpx;
  height: 60rpx;
  background: #1890ff;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.step-image {
  width: 100%;
  height: auto;
  border-radius: 8rpx;
}

.apply-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFD700;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-radius: 44rpx;
  border: none;
}

.apply-btn:active {
  opacity: 0.9;
} 