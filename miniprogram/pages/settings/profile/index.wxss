.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-top: 20rpx;
}

.settings-list {
  background: #fff;
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-left {
  flex: 1;
  margin-right: 20rpx;
}

.title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 修改switch样式 */
switch {
  transform: scale(0.8);
  margin-right: -10rpx;
} 