.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.banner {
  width: 100%;
  height: 280rpx;
  background: #fff;
}

.banner image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner::after {
  display: none;
}

.banner-content {
  display: none;
}

.safety-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx 30rpx;
  background: linear-gradient(90deg, #222, #000);
  margin: 20rpx 30rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.safety-bar text {
  color: #FFD700;
  font-size: 26rpx;
  font-weight: 500;
}

.safety-bar .arrow {
  display: none;
}

.main-content {
  margin: 20rpx 30rpx 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 10rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.select-section {
  background: #fff;
}

.location-info {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.city-select, .location-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value-with-arrow {
  display: flex;
  align-items: center;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.value.placeholder {
  color: #999;
  font-weight: normal;
}

.arrow {
  margin-left: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.return-different {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.switch {
  transform: scale(0.8);
  color: #FFC508 !important;
}

.wx-switch-input {
  background: #DDDDDD !important;
  border-color: #DDDDDD !important;
}

.wx-switch-input::before {
  background: #fff !important;
}

.wx-switch-input::after {
  background: #fff !important;
}

.wx-switch-input.wx-switch-input-checked {
  background: #FFC508 !important;
  border-color: #FFC508 !important;
}

.distance {
  font-size: 24rpx;
  color: #666;
  margin-left: 12rpx;
}

.time-section {
  margin: 20rpx 0;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.time-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.time-label {
  font-size: 28rpx;
  color: #666;
}

.time-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.time-value.placeholder {
  color: #999;
  font-weight: normal;
  font-size: 28rpx;
}

.duration {
  text-align: center;
  padding: 16rpx 0;
  color: #666;
  font-size: 26rpx;
  position: relative;
}

.duration::before,
.duration::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 60rpx;
  height: 1rpx;
  background: #eee;
}

.duration::before {
  left: 30%;
}

.duration::after {
  right: 30%;
}

.service-option {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.checkbox {
  transform: scale(0.8);
  margin-right: 8rpx;
}

.service-option text {
  font-size: 28rpx;
  color: #666;
}

.discount-notice {
  margin: 20rpx 0;
  padding: 16rpx 24rpx;
  background: #FFF1F0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.tag {
  padding: 4rpx 12rpx;
  background: #FF4D4F;
  color: #fff;
  border-radius: 4rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
}

.discount-notice text:last-child {
  font-size: 24rpx;
  color: #FF4D4F;
}

.select-btn {
  margin: 30rpx 0 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(90deg, #FFD700, #FFC107);
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  text-align: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.3);
}

.select-btn:active {
  opacity: 0.9;
  transform: translateY(1rpx);
}

.wx-swiper-dots {
  position: absolute;
  bottom: 20rpx;
}

.wx-swiper-dot {
  width: 8rpx !important;
  height: 8rpx !important;
  border-radius: 4rpx !important;
  background: rgba(255, 255, 255, 0.4) !important;
  margin: 0 4rpx !important;
}

.wx-swiper-dot-active {
  background: #fff !important;
}

.service-features {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.feature-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.feature-header .title {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.feature-header .view-all {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.feature-list {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.feature-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.feature-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  text-align: center;
}

.feature-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  width: 100%;
}

.service-guarantee {
  text-align: center;
  padding-top: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.service-guarantee text:first-child {
  font-size: 30rpx;
  color: #C4A761;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 2rpx;
}

.guarantee-items {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 16rpx;
}

.guarantee-items text {
  font-size: 24rpx;
  color: #999;
  letter-spacing: 1rpx;
}

.guarantee-items .divider {
  margin: 0 24rpx;
  color: #eee;
  font-weight: 200;
}

.status-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 30rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  position: relative;
}

.status-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.status-item text {
  font-size: 24rpx;
  color: #666;
}

/* 选中状态样式 */
.status-item.active {
  position: relative;
}

.status-item.active text {
  color: #FFD700;
  font-weight: 500;
}

.status-item.active .status-icon {
  transform: scale(1.1);
}

.status-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #FFD700;
  border-radius: 2rpx;
}

/* 添加点击反馈效果 */
.status-item:active {
  opacity: 0.8;
} 