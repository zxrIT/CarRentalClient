.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.help-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.help-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.help-item:last-child {
  border-bottom: none;
}

.help-item text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 统一箭头样式 */
.help-item .arrow {
  width: 32rpx;
  height: 32rpx;
  color: #999;
  font-size: 24rpx;
} 