.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.section-title.warning {
  color: #ff6b6b;
}

.notice-items {
  padding-left: 20rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.qa-list {
  margin-top: 20rpx;
}

.qa-item {
  margin-bottom: 40rpx;
}

.qa-item:last-child {
  margin-bottom: 0;
}

.question {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.q-icon {
  width: 40rpx;
  height: 40rpx;
  background: #FFD700;
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.question text:last-child {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5;
}

.answer {
  display: flex;
  align-items: flex-start;
}

.a-icon {
  width: 40rpx;
  height: 40rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.answer-content {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.answer-content view {
  margin-bottom: 12rpx;
}

.answer-content view:last-child {
  margin-bottom: 0;
} 