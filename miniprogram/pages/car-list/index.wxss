.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.time-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #FFF8E6;
  color: #333;
  font-size: 28rpx;
}

.edit-btn {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.edit-btn image {
  width: 100%;
  height: 100%;
}

.filter-bar {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.filter-item.active {
  color: #333;
  font-weight: 500;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}

.tags {
  padding: 20rpx;
  white-space: nowrap;
  background: #fff;
}

.tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  border-radius: 26rpx;
}

.tag.active {
  background: #FFF8E6;
  color: #333;
}

.car-list {
  height: calc(100vh - 240rpx);
}

.car-item {
  margin: 20rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  position: relative;
}

.car-image {
  width: 240rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.car-info {
  flex: 1;
}

.car-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.car-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.car-tags {
  margin-bottom: 12rpx;
}

.car-tags .tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  margin-right: 12rpx;
  background: #f8f8f8;
  border-radius: 4rpx;
  color: #666;
}

.car-features {
  display: flex;
  flex-wrap: wrap;
}

.car-features .feature {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.car-price {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  text-align: right;
}

.car-price .unit {
  font-size: 24rpx;
  color: #FF6B6B;
}

.car-price .amount {
  font-size: 40rpx;
  color: #FF6B6B;
  font-weight: 500;
}

.car-price .day {
  font-size: 24rpx;
  color: #999;
}

.book-btn {
  margin-top: 12rpx;
  padding: 12rpx 24rpx;
  background: #FCBB00;
  color: #333;
  font-size: 24rpx;
  border-radius: 24rpx;
  font-weight: 500;
} 