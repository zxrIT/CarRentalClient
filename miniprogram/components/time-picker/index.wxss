.time-picker-container {
  background: #fff;
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f5f5f5;
}

.date-display {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fafafa;
}

.pickup-date, .return-date {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.date-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.date-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.pickup-date.active, .return-date.active {
  background: #fff5e6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.duration {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
}

.duration-days {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.duration-tip {
  font-size: 20rpx;
  color: #ff6b6b;
  margin-top: 8rpx;
}

.week {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.discount-tip {
  text-align: center;
  color: #ff6b6b;
  font-size: 24rpx;
  padding: 20rpx;
  background: #fff5f5;
}

.calendar-body {
  padding: 20rpx 30rpx;
  background: #fff;
}

.month {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.week-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  margin-bottom: 20rpx;
}

.week-row text {
  font-size: 24rpx;
  color: #999;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.day-item {
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 8rpx;
}

.day-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}

.day-item.disabled {
  pointer-events: none;
}

.day-item.disabled .day-text {
  color: #ccc;
}

.day-item.selected {
  background: #FFD700;
}

.day-item.selected .day-text {
  color: #333;
  font-weight: 500;
}

.day-item.in-range {
  background: #FFF8E6;
}

.day-item.today {
  position: relative;
}

.day-item.today .day-text {
  color: #FFD700;
  font-weight: 500;
}

.today-text {
  position: absolute;
  bottom: 4rpx;
  font-size: 20rpx;
  color: #FFD700;
}

.day-item:empty {
  pointer-events: none;
}

.day-item.other-month .day-text {
  color: #ccc;
}

.time-select {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
}

.time-label {
  font-size: 28rpx;
  color: #333;
}

.time-value {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
}

.time-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.time-section {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  background: #fff;
}

.time-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.time-picker-wrapper {
  height: 264rpx;
  position: relative;
}

.time-picker-wrapper::before,
.time-picker-wrapper::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 88rpx;
  pointer-events: none;
  z-index: 1;
}

.time-picker-wrapper::before {
  top: 0;
  background: linear-gradient(to bottom, rgba(255,255,255,0.9), rgba(255,255,255,0));
}

.time-picker-wrapper::after {
  bottom: 0;
  background: linear-gradient(to top, rgba(255,255,255,0.9), rgba(255,255,255,0));
}

.time-list {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.time-item {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 2rpx;
  position: relative;
  transition: all 0.3s ease;
}

.time-item.selected {
  color: #000;
  font-weight: 500;
}

.time-item.selected::after {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  width: 120rpx;
  height: 8rpx;
  background: #FFD700;
  border-radius: 4rpx;
}

.bottom-buttons {
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  gap: 24rpx;
  background: #fff;
}

.clear-btn, .confirm-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  transition: all 0.3s ease;
}

.clear-btn {
  background: #f5f5f5;
  color: #666;
}

.clear-btn:active {
  background: #eee;
}

.confirm-btn {
  background: #FFD700;
  color: #000;
}

.confirm-btn:active {
  opacity: 0.8;
} 